<body>
    <div class="main">
        <div class="container col-md-6 ">
            <header class="editIconHeader">
                <div>
               <a class="backButton"href="/perfil/edit"> <i  class="back-arrow fa-solid fa-arrow-left"></i></a>
                <h2>Editar Perfil</h2>
                </div>
                <div>
                   <h3> <%- usuario.nome %> </h3>
                    <div class="iconeEdit">
                        <% if(usuario.icon == "default"){ %> 
                          <div class="iconeEdit">
                            <% var icon = usuario.nome; icon = icon.charAt(0)%> 
                            <h3 class="icon-defaultEdit ">
                            <%- icon %> 
                            </h3>
                          </div><% } %> 
                          <% if(usuario.icon != "default"){ %> 
                           
                            <div class="iconeEdit">
                             <img href="/perfil/edit" class="iconeEdit" src="/imagens/ProfileIcons/<%-usuario.icon%>">
                            </div>
                           <% } %> 
                      </div>
                      </div>
            </header>
            <hr>
            <div class="selectIcon">
                
<% let icons = ["icon00.jpg","icon01.jpg","icon02.jpg","icon03.jpg","icon04.jpg","icon05.jpg","icon06.jpg","icon07.jpg","icon08.jpg","icon09.jpg","icon10.jpg","icon11.jpg","icon12.jpg","icon13.jpg","icon14.jpg","icon15.jpg","icon16.jpg","icon17.jpg","icon18.jpg","icon19.jpg","icon20.jpg","icon21.jpg","icon22.jpg","icon23.jpg","icon24.jpg"] %> 
                <% icons.forEach(function(icon){%> 
                    <form method="post" action="/perfil/editImg">
                    <input id="inputPreviousIcon" type="hidden" name="previousIcon" value='<%=usuario.icon%>'/>
                    <input id="inputIcon" type="hidden" name="profileIcon" value='<%=icon%>'/>
                    <button class="submitButton" type="submit"><img class="iconEditShow" src="/imagens/ProfileIcons/<%-icon%>"></button>
                </form>
                    <% }) %> 
            </div>
        </div>
</body>
