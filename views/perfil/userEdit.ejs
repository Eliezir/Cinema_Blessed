<body>
  <div class="main">
    <div class="container col-md-6 ">
  <h1>Editar Perfil</h1>
  <hr>
<form action="/perfil/editar" method="post" class="row">
  <div class="col-3 ">    
      <div class="icone">
        <i class=" edit-img fa-solid fa-pencil"></i>
       <% if(usuario.icon == "default"){ %> 
            <% var icon = usuario.nome; icon = icon.charAt(0)%> 
            <h3 class="icon-default">
            <%- icon %> 
            </h3><% } %> 
      </div>
  </div>
<div class="edit-form col-9">
  <input class='editInput'id="nomeInput" name="username" type="text" value='<%=usuario.nome%>'/>
  <label for="bioInput">Bio</label>
  <textarea class='editInput'id="bioInput" name="bio" type="text"  placeholder="Adicionar uma bio"><%=usuario.bio%></textarea>  
  <div class="social-media">
    <div>
  <label for="twitterInput">Twitter</label>
  <input class='editInput'id="twitterInput" name="twitter" type="text" value='<%=usuario.twitter%>' placeholder="Twitter username"/>
  </div>
  <div>
  <label for="instagramInput">Instagram</label>
  <input class='editInput'id="instagramInput" name="instagram" type="text" value='<%=usuario.instagram%>'placeholder="Instagram username"/>
  </div>
  </div>
</div>

<div class="container-button">
  <hr>
<button type="submit" class="formButton buttonSalvar">Salvar</button>
<a style='text-decoration: none' href="/perfil">
  <div type='submit' class="formButton buttonCancelar">Cancelar</div>
</a>
</div>
</form>
