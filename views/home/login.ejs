  <form action="/entrar" method="post" class="main">
    <div id="loginContainer">
      <div class='imgContainer'>
      <h1 class="img__title">Seja Bem-Vindo</h1>
    <img class='LoginImg'src="./imagens/loginImg.svg" alt="loginImg">
    </div>
      <div class="loginScreen">
        <h1 class="login__title">Login</h1>
        <label class="login__label">
          <span>nome de usuário</span>
          <input type="text" name="usuario[user]" class="input">
        </label>

        <label id="password" class="login__label">
          <span id='span-senha' class="span">senha</span>
          <input type="password" name="usuario[password]" class="input" id="senha">
          <button type="button" class="password__visible">
            <i class="material-icons visibility">visibility_off</i></button>
        </label>

        <div class="divEntrar">
          <label class="login__label--checkbox">
            <input type="checkbox" class="input--checkbox">
            Manter login
          </label>
          <button type="submit" class="entrar" disabled>Entrar</button>
        </div>
        <div class="login__icons">
          <button type="button" class="icons__button">
            <img src="./imagens/login/google.png" alt="google">
          </button>

          <button type="button" class="icons__button">
            <img src="./imagens/login/facebook.png" alt="facebook">
          </button>

          <button type="button" class="icons__button">
            <img src="./imagens/login/outlook.png" alt="outlook">
